{
	"compilerOptions": {
		"target": "ES2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
		"module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "removeComments": true
    },
    "lib": ["ESNext.Array","ES2023.Array"],
    "include": [
        "src/**/*.js",
        "src/**/*.ts"
      ],
    "exclude": [
      "src/**/*.spec.*",
      "__tests__/**/*.ts",
      "src/**/*.test.*",
        "src/**/*.tests.*",
        "./node_modules" 
      ]
}